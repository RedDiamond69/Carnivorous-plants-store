<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE =edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <link rel="shortcut icon" href=@ViewBag.Favicon type="image/png" />
    @Styles.Render("~/bundles/styles")
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("~/Content/Images/Website/favicon.png")" width="48" height="48" class="d-lg-inline-block d-none align-top" alt="Logo">
                <img src="@Url.Content("~/Content/Images/Website/favicon.png")" width="32" height="32" class="d-inline-block d-lg-none align-top" alt="Logo">
            </a>
            <p class="navbar-brand d-none d-lg-inline mr-auto mb-0 h1">Venus Flytrap</p>
            <div class="d-lg-none d-flex ml-auto align-items-center">
                @Html.ActionLink(@Resources.Resource.GoToHome, "Index", "Home", null, new { @class = "btn btn-xs btn-outline-success mr-1" })
            </div>
            <div class="ml-auto d-none d-lg-flex align-items-center justify-content-center">
                <div class="container-fluid flex-lg-column">
                    <div class="d-flex justify-content-center flex-nowrap">
                        @Html.ActionLink(@Resources.Resource.GoToHome, "Index", "Home", null, new { @class = "btn ml-3 text-nowrap btn-outline-success" })
                    </div>
                </div>
            </div>
        </nav>
    </div>
    @RenderBody()

    @Scripts.Render("~/bundles/js")
</body>
</html>
